@model Models.Produit.ProduitDetailVM;
<div class="card " >
    <div class="row g-0">
        <div class="col-md-4">
            <img src="~/produit/1/1_015.jpg"
                 class="img-fluid rounded-start" alt="Casque">

        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">@Model.Titre</h5>
                <p class="card-text">@Model.Description</p>
                <p class="card-text">
                    <small class="text-body-secondary">Last updated 3 mins ago</small></p>
                <a asp-controller="Panier"
                   asp-action="Index"
                   class="btn btn-primary"
                   asp-route-id="@Model.Id">Ajouter Panier</a>
            </div>
        </div>
    </div>
</div>






